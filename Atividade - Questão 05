programa {
  funcao inicio() {
    inteiro numero1, numero2, numero3
    real media

    escreva("Digite um Número: ")
    leia(numero1)
    escreva("Digite outro Número: ")
    leia(numero2)
    escreva("Digite outro Número: ")
    leia(numero3)
    limpa()

    media = (numero1+numero2+numero3)/3 //calculo da media
    escreva("A média aritmética é: ", media)
  }
}
